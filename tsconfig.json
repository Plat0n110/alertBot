{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["dom", "es6"],
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "target": "es2015",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "src"
  },
  "lib": ["es2015"]
}
